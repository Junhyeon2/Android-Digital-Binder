<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_palette"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/color_red"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorRed"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_pink"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorPink"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_purple"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorPurple"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_deep_purple"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorDeepPurple"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_indigo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorIndigo"
            android:orientation="vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/color_blue"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorBlue"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_light_blue"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorLightBlue"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_cyan"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorCyan"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_teal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorTeal"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_green"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorGreen"
            android:orientation="vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/color_light_green"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorLightGreen"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_lime"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorLime"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_yellow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorYellow"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_amber"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorAmber"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_orange"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorOrange"
            android:orientation="vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/color_deep_orange"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorDeepOrange"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_brown"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorBrown"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_grey"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorGrey"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_blue_grey"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorBlueGrey"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/color_black"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/colorBlack"
            android:orientation="vertical"/>
    </LinearLayout>

</LinearLayout>