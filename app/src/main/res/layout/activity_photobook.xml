<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_photobook"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team.code.effect.digitalbinder.photobook.PhotobookActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" />
        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent">
            <ImageButton
                android:id="@+id/btn_downward"
                android:src="@drawable/ic_arrow_downward_white_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:visibility="gone"
                android:onClick="btnClick"/>
            <ImageButton
                android:id="@+id/btn_upward"
                android:src="@drawable/ic_arrow_upward_white_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:onClick="btnClick"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#FFFFFF"
                android:visibility="gone"/>
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
